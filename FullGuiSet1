local setAgeBtn = Instance.new("TextButton", ageTab)
setAgeBtn.Size = UDim2.new(0, 200, 0, 40)
setAgeBtn.Position = UDim2.new(0, 20, 0, 70)
setAgeBtn.Text = "Set Age to 50"
setAgeBtn.Font = Enum.Font.FredokaOne
setAgeBtn.TextSize = 16
setAgeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
setAgeBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
Instance.new("UICorner", setAgeBtn)

setAgeBtn.MouseButton1Click:Connect(function()
	setAgeBtn.Text = "Setting Age..."
	for _, pet in ipairs(Workspace:GetChildren()) do
		if pet:IsA("Model") and pet:FindFirstChild("PetAge") then
			pet.PetAge.Value = 50
		end
	end
	wait(1)
	setAgeBtn.Text = "Set Age to 50"
end)

-- 🧬 Mutation Finder Tab
local mutationTab = contentFrames["Mutation Finder"]

local mutateBtn = Instance.new("TextButton", mutationTab)
mutateBtn.Size = UDim2.new(0, 200, 0, 40)
mutateBtn.Position = UDim2.new(0, 20, 0, 20)
mutateBtn.Text = "Auto Get Ascended"
mutateBtn.Font = Enum.Font.FredokaOne
mutateBtn.TextSize = 16
mutateBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
mutateBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
Instance.new("UICorner", mutateBtn)

local rerollMutationBtn = Instance.new("TextButton", mutationTab)
rerollMutationBtn.Size = UDim2.new(0, 200, 0, 40)
rerollMutationBtn.Position = UDim2.new(0, 20, 0, 70)
rerollMutationBtn.Text = "Mutation Reroll"
rerollMutationBtn.Font = Enum.Font.FredokaOne
rerollMutationBtn.TextSize = 16
rerollMutationBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
rerollMutationBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
Instance.new("UICorner", rerollMutationBtn)

-- Anti-spam
local mutating = false
mutateBtn.MouseButton1Click:Connect(function()
	if mutating then return end
	mutating = true
	mutateBtn.Text = "Getting Ascended..."
	local seconds = 0

	while seconds < 40 do
		for _, pet in ipairs(Workspace:GetChildren()) do
			if pet:IsA("Model") and pet:FindFirstChild("Mutation") then
				local mutation = pet:FindFirstChild("Mutation")
				mutation.Value = "None"
			end
		end
		wait(1)
		seconds += 1
	end

	for _, pet in ipairs(Workspace:GetChildren()) do
		if pet:IsA("Model") and pet:FindFirstChild("Mutation") then
			pet.Mutation.Value = "Ascended"
		end
	end

	mutateBtn.Text = "ASCENDED FOUND!"
	wait(1.5)
	mutateBtn.Text = "Auto Get Ascended"
	mutating = false
end)

-- Manual Mutation Reroll
local rMutateDebounce = false
rerollMutationBtn.MouseButton1Click:Connect(function()
	if rMutateDebounce then return end
	rMutateDebounce = true
	for _, pet in ipairs(Workspace:GetChildren()) do
		if pet:IsA("Model") and pet:FindFirstChild("Mutation") then
			pet.Mutation.Value = "None"
		end
	end
	wait(1)
	rMutateDebounce = false
end)

