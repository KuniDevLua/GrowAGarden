-- ⚠ Continue to Part 2 for Pet ESP, Auto Randomizer, and Age Changer

-- ESP logic
local rarePets = {
	["Golden Lab"] = true, ["Deer"] = true, ["Spotted Deer"] = true, ["Silver Monkey"] = true,
	["Red Giant Ant"] = true, ["Praying Mantis"] = true, ["Night Owl"] = true, ["Petal Bee"] = true,
	["Tarantula Hawk"] = true, ["Axolotl"] = true, ["Capybara"] = true, ["Stegosaurus"] = true,
	["Pachycephalosaurus"] = true
}

local highlights = {}

local function updateESP()
	for _, v in pairs(highlights) do
		v:Destroy()
	end
	table.clear(highlights)

	for _, egg in ipairs(Workspace:GetDescendants()) do
		if egg:IsA("Model") and egg:FindFirstChild("EggName") and egg:FindFirstChild("PetName") then
			local h = Instance.new("Highlight", egg)
			h.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
			h.FillColor = Color3.fromRGB(50, 200, 50)
			h.FillTransparency = 0.25
			h.OutlineColor = Color3.fromRGB(0, 0, 0)
			h.OutlineTransparency = 0
			table.insert(highlights, h)

			local b = Instance.new("BillboardGui", egg)
			b.Size = UDim2.new(0, 200, 0, 50)
			b.StudsOffset = Vector3.new(0, 3, 0)
			b.AlwaysOnTop = true

			local tl = Instance.new("TextLabel", b)
			tl.Size = UDim2.new(1, 0, 1, 0)
			tl.BackgroundTransparency = 1
			tl.Text = egg.PetName.Value
			tl.Font = Enum.Font.FredokaOne
			tl.TextSize = 20
			tl.TextColor3 = rarePets[egg.PetName.Value] and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 255, 255)

			if rarePets[egg.PetName.Value] then
				coroutine.wrap(function()
					while task.wait(0.5) do
						tl.TextColor3 = tl.TextColor3 == Color3.fromRGB(0, 255, 0) and Color3.fromRGB(255, 255, 255) or Color3.fromRGB(0, 255, 0)
					end
				end)()
			end
		end
	end
end

local tab = contentFrames["Randomizer"]

local eggNameLabel = Instance.new("TextLabel", tab)
eggNameLabel.Size = UDim2.new(0, 300, 0, 40)
eggNameLabel.Position = UDim2.new(0, 20, 0, 20)
eggNameLabel.Text = "Pet Name"
eggNameLabel.Font = Enum.Font.FredokaOne
eggNameLabel.TextSize = 20
eggNameLabel.BackgroundTransparency = 1
eggNameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)

local autoBtn = Instance.new("TextButton", tab)
autoBtn.Size = UDim2.new(0, 140, 0, 40)
autoBtn.Position = UDim2.new(0, 20, 0, 70)
autoBtn.Text = "Auto Randomizer"
autoBtn.Font = Enum.Font.FredokaOne
autoBtn.TextSize = 16
autoBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
autoBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
Instance.new("UICorner", autoBtn)

local rerollBtn = Instance.new("TextButton", tab)
rerollBtn.Size = UDim2.new(0, 140, 0, 40)
rerollBtn.Position = UDim2.new(0, 180, 0, 70)
rerollBtn.Text = "Manual Reroll"
rerollBtn.Font = Enum.Font.FredokaOne
rerollBtn.TextSize = 16
rerollBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
rerollBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
Instance.new("UICorner", rerollBtn)

local espBtn = Instance.new("TextButton", tab)
espBtn.Size = UDim2.new(0, 140, 0, 40)
espBtn.Position = UDim2.new(0, 20, 0, 120)
espBtn.Text = "Toggle ESP"
espBtn.Font = Enum.Font.FredokaOne
espBtn.TextSize = 16
espBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
espBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
Instance.new("UICorner", espBtn)

local espVisible = true
espBtn.MouseButton1Click:Connect(function()
	espVisible = not espVisible
	for _, v in pairs(highlights) do
		v.Enabled = espVisible
	end
end)

-- Manual Reroll
local debounce = false
rerollBtn.MouseButton1Click:Connect(function()
	if debounce then return end
	debounce = true
	for _, egg in ipairs(Workspace:GetDescendants()) do
		if egg:IsA("Model") and egg:FindFirstChild("EggName") then
			local name = egg.EggName.Value
			local pets = petTable[name]
			if pets then
				local pick = pets[math.random(1, #pets)]
				local p = egg:FindFirstChild("PetName") or Instance.new("StringValue", egg)
				p.Name = "PetName"
				p.Value = pick
			end
		end
	end
	updateESP()
	wait(1)
	debounce = false
end)

-- Auto Randomizer
local running = false
autoBtn.MouseButton1Click:Connect(function()
	if running then return end
	running = true
	local elapsed = 0
	eggNameLabel.Text = "Randomizing..."

	while elapsed < 40 do
		for _, egg in ipairs(Workspace:GetDescendants()) do
			if egg:IsA("Model") and egg:FindFirstChild("EggName") then
				local name = egg.EggName.Value
				local pets = petTable[name]
				if pets then
					local pick = pets[math.random(1, #pets)]
					local p = egg:FindFirstChild("PetName") or Instance.new("StringValue", egg)
					p.Name = "PetName"
					p.Value = pick
				end
			end
		end
		updateESP()
		task.wait(1)
		elapsed += 1
	end

	for _, egg in ipairs(Workspace:GetDescendants()) do
		if egg:IsA("Model") and egg:FindFirstChild("EggName") then
			local name = egg.EggName.Value
			local pets = petTable[name]
			if pets then
				for _, pet in pairs(pets) do
					if rarePets[pet] then
						local p = egg:FindFirstChild("PetName") or Instance.new("StringValue", egg)
						p.Name = "PetName"
						p.Value = pet
						break
					end
				end
			end
		end
	end

	eggNameLabel.Text = "Found Rare Pet!"
	updateESP()
	running = false
end)

