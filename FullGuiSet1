local player = game.Players.LocalPlayer
local TweenService = game:GetService("TweenService")
local Workspace = game:GetService("Workspace")

-- GUI Setup
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "KuniHub"

-- Loading Screen
local loadingFrame = Instance.new("Frame", screenGui)
loadingFrame.Size = UDim2.new(0.3, 0, 0.2, 0)
loadingFrame.Position = UDim2.new(0.35, 0, 0.4, 0)
loadingFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
loadingFrame.BorderSizePixel = 0
loadingFrame.ZIndex = 10
Instance.new("UICorner", loadingFrame)

local loadingText = Instance.new("TextLabel", loadingFrame)
loadingText.Size = UDim2.new(1, 0, 0.5, 0)
loadingText.Position = UDim2.new(0, 0, 0.1, 0)
loadingText.Text = "Kuni Hub"
loadingText.Font = Enum.Font.FredokaOne
loadingText.TextSize = 28
loadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
loadingText.BackgroundTransparency = 1

local loadingBar = Instance.new("Frame", loadingFrame)
loadingBar.Size = UDim2.new(0, 0, 0.15, 0)
loadingBar.Position = UDim2.new(0, 0, 0.75, 0)
loadingBar.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
Instance.new("UICorner", loadingBar)

-- Animate loading
TweenService:Create(loadingBar, TweenInfo.new(5), {Size = UDim2.new(1, 0, 0.15, 0)}):Play()
wait(5)
loadingFrame:Destroy()

-- Main GUI Frame
local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0.5, 0, 0.6, 0)
mainFrame.Position = UDim2.new(0.25, 0, 0.2, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
mainFrame.BorderSizePixel = 0
mainFrame.Visible = true
Instance.new("UICorner", mainFrame)

-- Sidebar
local sidebar = Instance.new("Frame", mainFrame)
sidebar.Size = UDim2.new(0, 140, 1, 0)
sidebar.Position = UDim2.new(0, 0, 0, 0)
sidebar.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Instance.new("UICorner", sidebar)

-- Content Frame
local contentHolder = Instance.new("Frame", mainFrame)
contentHolder.Size = UDim2.new(1, -140, 1, 0)
contentHolder.Position = UDim2.new(0, 140, 0, 0)
contentHolder.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
contentHolder.BorderSizePixel = 0

local tabButtons = {}
local contentFrames = {}

local function createTab(name)
	local button = Instance.new("TextButton", sidebar)
	button.Size = UDim2.new(1, -20, 0, 40)
	button.Position = UDim2.new(0, 10, 0, #tabButtons * 50 + 10)
	button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
	button.TextColor3 = Color3.fromRGB(255, 255, 255)
	button.Text = name
	button.Font = Enum.Font.FredokaOne
	button.TextSize = 16
	Instance.new("UICorner", button)

	local frame = Instance.new("Frame", contentHolder)
	frame.Size = UDim2.new(1, 0, 1, 0)
	frame.BackgroundTransparency = 1
	frame.Visible = #tabButtons == 0

	table.insert(tabButtons, button)
	contentFrames[name] = frame

	button.MouseButton1Click:Connect(function()
		for _, btn in pairs(tabButtons) do btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50) end
		for _, frm in pairs(contentFrames) do frm.Visible = false end
		button.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
		frame.Visible = true
	end)
end

createTab("Randomizer")
createTab("Age")
createTab("Mutation")

