-- VIP Kuni Hub Floating Loading Panel (5 Seconds)

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")

-- GUI Container
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "KuniVIPLoading"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
screenGui.Parent = playerGui

-- Panel (Floating, Centered)
local panel = Instance.new("Frame")
panel.Size = UDim2.new(0, 420, 0, 140)
panel.Position = UDim2.new(0.5, -210, 0.5, -70)
panel.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
panel.BorderSizePixel = 0
panel.Parent = screenGui

-- Rounded corners
Instance.new("UICorner", panel).CornerRadius = UDim.new(0, 14)

-- Drop shadow effect
local shadow = Instance.new("ImageLabel")
shadow.Size = UDim2.new(1, 60, 1, 60)
shadow.Position = UDim2.new(0.5, -240, 0.5, -90)
shadow.BackgroundTransparency = 1
shadow.Image = "rbxassetid://1316045217"
shadow.ImageTransparency = 0.6
shadow.ZIndex = -1
shadow.Parent = panel

-- Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, -40, 0, 50)
titleLabel.Position = UDim2.new(0, 20, 0, 10)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Kuni Hub Scripts"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.Font = Enum.Font.FredokaOne
titleLabel.TextScaled = true
titleLabel.TextStrokeTransparency = 0.85
titleLabel.Parent = panel

-- Loading Bar Background
local barBg = Instance.new("Frame")
barBg.Size = UDim2.new(1, -40, 0, 18)
barBg.Position = UDim2.new(0, 20, 1, -40)
barBg.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
barBg.BorderSizePixel = 0
barBg.Parent = panel
Instance.new("UICorner", barBg).CornerRadius = UDim.new(0, 10)

-- Loading Fill
local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
barFill.BorderSizePixel = 0
barFill.Parent = barBg
Instance.new("UICorner", barFill).CornerRadius = UDim.new(0, 10)

-- Glowing gradient
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 255, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 170, 255))
}
gradient.Transparency = NumberSequence.new{
	NumberSequenceKeypoint.new(0, 0),
	NumberSequenceKeypoint.new(1, 0.2)
}
gradient.Parent = barFill

-- Animate bar (5s duration)
TweenService:Create(barFill, TweenInfo.new(5, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {
	Size = UDim2.new(1, 0, 1, 0)
}):Play()

-- Auto-close after 5 seconds
task.delay(5, function()
	-- Fade out all elements
	TweenService:Create(panel, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
	TweenService:Create(barBg, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
	TweenService:Create(barFill, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
	TweenService:Create(titleLabel, TweenInfo.new(0.5), {TextTransparency = 1, TextStrokeTransparency = 1}):Play()
	TweenService:Create(shadow, TweenInfo.new(0.5), {ImageTransparency = 1}):Play()
	
	wait(0.6)
	screenGui:Destroy()
end)
