-- Final Pet Mutation Finder GUI by Kuni (Professional Version)
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

-- üß¨ Mutation List
local mutations = {
    "Shiny", "Inverted", "Frozen", "Windy", "Golden", "Mega", "Tiny",
    "Tranquil", "IronSkin", "Radiant", "Rainbow", "Shocked", "Ascended"
}
local currentMutation = mutations[math.random(#mutations)]
local espVisible = true

-- üïí Loading Screen
local loadingGui = Instance.new("ScreenGui", PlayerGui)
loadingGui.IgnoreGuiInset = true
loadingGui.ResetOnSpawn = false

local loadFrame = Instance.new("Frame", loadingGui)
loadFrame.Size = UDim2.new(0, 300, 0, 100)
loadFrame.Position = UDim2.new(0.5, -150, 0.5, -50)
loadFrame.BackgroundColor3 = Color3.fromRGB(240, 240, 250)
loadFrame.BorderSizePixel = 0
Instance.new("UICorner", loadFrame).CornerRadius = UDim.new(0, 12)

local label = Instance.new("TextLabel", loadFrame)
label.Size = UDim2.new(1, 0, 0.5, 0)
label.Position = UDim2.new(0, 0, 0, 0)
label.BackgroundTransparency = 1
label.Text = "Kuni Hub"
label.TextColor3 = Color3.fromRGB(50, 50, 60)
label.Font = Enum.Font.FredokaOne
label.TextSize = 28

local barBG = Instance.new("Frame", loadFrame)
barBG.Size = UDim2.new(1, -40, 0, 20)
barBG.Position = UDim2.new(0, 20, 1, -30)
barBG.BackgroundColor3 = Color3.fromRGB(210, 210, 220)
Instance.new("UICorner", barBG).CornerRadius = UDim.new(0, 6)

local bar = Instance.new("Frame", barBG)
bar.Size = UDim2.new(0, 0, 1, 0)
bar.BackgroundColor3 = Color3.fromRGB(120, 200, 255)
Instance.new("UICorner", bar).CornerRadius = UDim.new(0, 6)

-- Tween loading bar
TweenService:Create(bar, TweenInfo.new(5), {Size = UDim2.new(1, 0, 1, 0)}):Play()

-- Destroy loading screen after 5s
task.delay(5, function()
    loadingGui:Destroy()
end)

-- üñ•Ô∏è Main GUI
local gui = Instance.new("ScreenGui", PlayerGui)
gui.Name = "PetMutationFinder"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 220, 0, 185)
frame.Position = UDim2.new(0.4, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(235, 235, 245)
frame.BorderColor3 = Color3.fromRGB(180, 180, 190)
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)
Instance.new("UIStroke", frame).Color = Color3.fromRGB(180, 180, 190)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 35)
