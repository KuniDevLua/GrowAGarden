-- Variables
local lastClick = 0
local autoRunning = false
local statusLabel = Instance.new("TextLabel", main)
statusLabel.Size = UDim2.new(1, -130, 0, 30)
statusLabel.Position = UDim2.new(0, 130, 0, 10)
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
statusLabel.Font = Enum.Font.FredokaOne
statusLabel.TextSize = 18
statusLabel.Text = "Idle"

-- Get random pet
local function randomPet(eggType)
    local pets = petTable[eggType]
    if not pets then return "???", false end
    local name = pets[math.random(1, #pets)]
    local isRare = table.find({"Golden Lab", "Capybara", "Kitsune", "Petal Bee", "Night Owl", "Spotted Deer", "Silver Monkey"}, name)
    return name, isRare
end

-- Manual Reroll
createButton("Manual Reroll", sidebar, function()
    if tick() - lastClick < 1 then return end
    lastClick = tick()
    for _, egg in pairs(Workspace:GetChildren()) do
        if egg:IsA("Model") and egg:FindFirstChild("NameTag") then
            local petName, isRare = randomPet(egg.Name)
            createESP(egg, petName)
        end
    end
end)
-- Auto Randomizer
createButton("Auto Randomizer", sidebar, function()
    if autoRunning then return end
    autoRunning = true
    statusLabel.Text = "Randomizing..."

    local seconds = 0
    while autoRunning and seconds < 40 do
        for _, egg in pairs(Workspace:GetChildren()) do
            if egg:IsA("Model") and egg:FindFirstChild("NameTag") then
                local petName, _ = randomPet(egg.Name)
                createESP(egg, petName)
            end
        end
        seconds += 1
        statusLabel.Text = "Randomizing... " .. seconds .. "s"
        task.wait(1)
    end

    for _, egg in pairs(Workspace:GetChildren()) do
        if egg:IsA("Model") and egg:FindFirstChild("NameTag") then
            local petName = "Golden Lab" -- Force rare
            createESP(egg, petName)
        end
    end
    statusLabel.Text = "Found Rare Pet!"
    task.wait(2)
    statusLabel.Text = "Idle"
    autoRunning = false
end)
-- Load external Pet Age GUI
createButton("Pet Age Changer", sidebar, function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/KuniDevLua/GrowAGarden/main/KuniAgeChanger.lua"))()
end)

