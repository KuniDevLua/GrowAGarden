local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Screen GUI Setup
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "PetDuplicatorGUI"
screenGui.ResetOnSpawn = false
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Soft friendly colors
local softColors = {
	Color3.fromRGB(200, 230, 250), -- soft blue
	Color3.fromRGB(255, 220, 180), -- soft orange
	Color3.fromRGB(220, 255, 200), -- soft green
	Color3.fromRGB(255, 200, 220), -- soft pink
	Color3.fromRGB(240, 240, 255)  -- soft purple
}
local nextColor = 1

-- Main Frame
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 320, 0, 200)
frame.Position = UDim2.new(0.5, -160, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(245, 245, 250)
frame.Active = true
frame.Draggable = true
frame.Name = "DuplicatorFrame"
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

-- Title with DNA emoji
local title = Instance.new("TextLabel", frame)
title.Text = "üß¨ Duplicator V1"
title.Font = Enum.Font.FredokaOne
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(50, 50, 50)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0, 36)
title.Position = UDim2.new(0, 0, 0, 5)

-- Close Button
local closeButton = Instance.new("TextButton", frame)
closeButton.Text = "X"
closeButton.Font = Enum.Font.FredokaOne
closeButton.TextSize = 18
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.BackgroundColor3 = Color3.fromRGB(230, 100, 100)
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -36, 0, 6)
Instance.new("UICorner", closeButton)
closeButton.MouseButton1Click:Connect(function()
	frame.Visible = false
end)

-- Equipped Pet/Item Label
local petInfo = Instance.new("TextLabel", frame)
petInfo.Text = "(Pet/Item Equipped): [None]"
petInfo.Font = Enum.Font.FredokaOne
petInfo.TextSize = 16
petInfo.TextColor3 = Color3.fromRGB(50, 50, 50)
petInfo.BackgroundTransparency = 1
petInfo.Position = UDim2.new(0, 12, 0, 50)
petInfo.Size = UDim2.new(1, -24, 0, 24)
petInfo.TextXAlignment = Enum.TextXAlignment.Left

-- Duplicate Button
local dupeButton = Instance.new("TextButton", frame)
dupeButton.Text = "üé≤ Duplicate Pet/Item"
dupeButton.Font = Enum.Font.FredokaOne
dupeButton.TextSize = 16
dupeButton.TextColor3 = Color3.fromRGB(50, 50, 50)
dupeButton.BackgroundColor3 = softColors[nextColor]
nextColor = nextColor + 1
if nextColor > #softColors then nextColor = 1 end
dupeButton.Size = UDim2.new(0, 220, 0, 36)
dupeButton.Position = UDim2.new(0.5, -110, 0, 80)
Instance.new("UICorner", dupeButton)

-- Multiplier Setup
local multiplier = 1
local multiFrame = Instance.new("Frame", frame)
multiFrame.Size = UDim2.new(0, 180, 0, 36)
multiFrame.Position = UDim2.new(0.5, -90, 0, 124)
multiFrame.BackgroundTransparency = 1

local minusBtn = Instance.new("TextButton", multiFrame)
minusBtn.Size = UDim2.new(0, 40, 1, 0)
minusBtn.Position = UDim2.new(0, 0, 0, 0)
minusBtn.Text = "‚ûñ"
minusBtn.Font = Enum.Font.FredokaOne
minusBtn.TextSize = 22
minusBtn.TextColor3 = Color3.fromRGB(50, 50, 50)
minusBtn.BackgroundColor3 = softColors[1]
Instance.new("UICorner", minusBtn)

local numLabel = Instance.new("TextLabel", multiFrame)
numLabel.Size = UDim2.new(0, 100, 1, 0)
numLabel.Position = UDim2.new(0, 40, 0, 0)
numLabel.Text = tostring(multiplier)
numLabel.Font = Enum.Font.FredokaOne
numLabel.TextSize = 18
numLabel.TextColor3 = Color3.fromRGB(50, 50, 50)
numLabel.BackgroundColor3 = softColors[2]
Instance.new("UICorner", numLabel)

local plusBtn = Instance.new("TextButton", multiFrame)
plusBtn.Size = UDim2.new(0, 40, 1, 0)
plusBtn.Position = UDim2.new(0, 140, 0, 0)
plusBtn.Text = "‚ûï"
plusBtn.Font = Enum.Font.FredokaOne
plusBtn.TextSize = 22
plusBtn.TextColor3 = Color3.fromRGB(50, 50, 50)
plusBtn.BackgroundColor3 = softColors[3]
Instance.new("UICorner", plusBtn)

-- Button functions
minusBtn.MouseButton1Click:Connect(function()
	multiplier = math.max(1, multiplier - 1)
	numLabel.Text = tostring(multiplier)
end)

plusBtn.MouseButton1Click:Connect(function()
	multiplier = math.min(100, multiplier + 1)
	numLabel.Text = tostring(multiplier)
end)

-- Footer
local footer = Instance.new("TextLabel", frame)
footer.Text = "üë§ Tiktok: @yawiyawiyawiz1"
footer.Font = Enum.Font.FredokaOne
footer.TextSize = 13
footer.TextColor3 = Color3.fromRGB(80, 80, 80)
footer.BackgroundTransparency = 1
footer.Size = UDim2.new(1, 0, 0, 20)
footer.Position = UDim2.new(0, 0, 1, -20)

-- Functions
local function getEquippedTool()
	character = player.Character or player.CharacterAdded:Wait()
	for _, tool in pairs(character:GetChildren()) do
		if tool:IsA("Tool") and tool:FindFirstChild("Handle") then
			return tool
		end
	end
	return nil
end

local function updateGUI()
	local tool = getEquippedTool()
	if tool then
		petInfo.Text = "(Pet/Item Equipped): " .. tool.Name
	else
		petInfo.Text = "(Pet/Item Equipped): [None]"
	end
end

local function showError(text)
	local errLabel = Instance.new("TextLabel", screenGui)
	errLabel.AnchorPoint = Vector2.new(0.5, 0.5)
	errLabel.Position = UDim2.new(0.5, 0, 0.45, 0)
	errLabel.Size = UDim2.new(0, 260, 0, 40)
	errLabel.BackgroundColor3 = Color3.fromRGB(255, 180, 180)
	errLabel.Text = text
	errLabel.Font = Enum.Font.FredokaOne
	errLabel.TextSize = 16
	errLabel.TextColor3 = Color3.fromRGB(50, 50, 50)
	errLabel.ZIndex = 30
	Instance.new("UICorner", errLabel)
	task.delay(2.5, function() errLabel:Destroy() end)
end

-- Duplicate with 10-second loading
dupeButton.MouseButton1Click:Connect(function()
	local tool = getEquippedTool()
	if not tool then
		showError("No Equipped Pet/Item detected")
		return
	end

	-- Disable button while loading
	dupeButton.AutoButtonColor = false
	local originalText = dupeButton.Text
	local countdown = 10
	for i = countdown, 1, -1 do
		dupeButton.Text = "‚è≥ Loading: " .. i .. "s"
		task.wait(1)
	end

	for i = 1, multiplier do
		local clone = tool:Clone()
		clone.Name = tool.Name
		clone.Parent = player.Backpack
	end
	dupeButton.Text = "(Pet/Item Duplicated) x"..multiplier.."!"
	task.wait(1.5)
	dupeButton.Text = originalText
	dupeButton.AutoButtonColor = true
end)

-- Keep label updated
task.spawn(function()
	while true do
		updateGUI()
		task.wait(1)
	end
end)
