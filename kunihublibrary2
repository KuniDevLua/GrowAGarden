-- Rayfield UI Loader by Kuni (Organized Tabs)

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

--// Main Window
local Window = Rayfield:CreateWindow({
    Name = "Script Loader by Kuni",
    LoadingTitle = "Grow A Garden",
    LoadingSubtitle = "Converted from Yawi Library",
    KeySystem = false,
})

--// Tabs
local PetsTab = Window:CreateTab("Pet Scripts")
local HubsTab = Window:CreateTab("Script Hubs")
local UtilsTab = Window:CreateTab("Utilities")

--// Helper function for buttons
local function createButton(tab, name, url)
    tab:CreateButton({
        Name = name,
        Callback = function()
            pcall(function()
                loadstring(game:HttpGet(url))()
            end)
        end,
    })
end

--// Pet Scripts
createButton(PetsTab, "Rayfield Dark Spawner", "https://gitlab.com/darkiedarkie/dark/-/raw/main/Spawner.lua")
createButton(PetsTab, "Moon Cat Ability Range Changer", "https://raw.githubusercontent.com/KuniDevLua/GrowAGardenScripts/refs/heads/main/MoonCatChanger")
createButton(PetsTab, "Pet Randomizer (Keyless)", "https://raw.githubusercontent.com/KuniDevLua/GrowAGarden/refs/heads/main/EGG%20DETECTOR1")
createButton(PetsTab, "Pet Weight Changer (Keyless)", "https://raw.githubusercontent.com/KuniDevLua/GrowAGarden/refs/heads/main/petsizechanger")

--// Script Hubs
createButton(HubsTab, "Yawi Hub X (Keyless)", "https://raw.githubusercontent.com/KuniDevLua/GrowAGarden/refs/heads/main/FullFeaturesObsa")
createButton(HubsTab, "Project Reverse (Keyless)", "https://raw.githubusercontent.com/veryimportantrr/x/refs/heads/main/gag_visual.lua")
createButton(HubsTab, "Speed Hub X (Keyless)", "https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua")
createButton(HubsTab, "Nat Hub Loader (Key)", "https://get.nathub.xyz/loader")
createButton(HubsTab, "ThanHub (Keyless)", "https://raw.githubusercontent.com/thantzy/thanhub/refs/heads/main/thanv1")
createButton(HubsTab, "Limit Hub (Key)", "https://raw.githubusercontent.com/FakeModz/LimitHub/refs/heads/main/LimitHub_Luarmor_E.lua")
createButton(HubsTab, "ThunderZ Hub (Keyless)", "https://raw.githubusercontent.com/ThundarZ/Welcome/refs/heads/main/Main/GaG/Main.lua")

--// Utilities
createButton(UtilsTab, "Duplicate Tag Remover (Keyless)", "https://raw.githubusercontent.com/KuniDevLua/GrowAGardenScripts/refs/heads/main/tagremover")

--// Footer Info
Rayfield:Notify({
    Title = "Loader Ready",
    Content = "All scripts loaded into Rayfield UI with tabs!",
    Duration = 6,
})
